@model Eccomerce.Areas.Admin.Models.TypeProduct

@{
    ViewData["Title"] = "Create";
    
}



<h4>@(ViewContext.RouteData.Values["id"]!=null?"Chỉnh sửa danh mục":"Thêm danh mục mới")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(ViewContext.RouteData.Values["id"]!=null?"Edit":"Create")"
              asp-route-id="@(ViewContext.RouteData.Values["id"]!=null?ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewContext.RouteData.Values["id"]!=null)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input checked asp-for="Status" /> Trạng thái
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ViewContext.RouteData.Values["id"]!=null?"Update":"Add New")" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


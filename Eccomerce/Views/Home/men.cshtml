@model IEnumerable<Eccomerce.Areas.Admin.Models.Product>
<!-- /banner_bottom_agile_info -->
<div class="page-head_agile_info_w3l">
    <div class="container">
        <h3>Men's <span>Wear  </span></h3>
        <!--/w3_short-->
        <div class="services-breadcrumb">
            <div class="agile_inner_breadcrumb">

                <ul class="w3_short">
                    <li><a asp-controller="Home" asp-action="Index">Home</a><i>|</i></li>
                    <li>Men's Wear</li>
                </ul>
            </div>
        </div>
        <!--//w3_short-->
    </div>
</div>

<!-- banner-bootom-w3-agileits -->
<div class="banner-bootom-w3-agileits">
    <div style="text-align: center"><h2>All <span class="fs-1">Product</span></h2></div>
    <div class="container">
        <!-- mens -->
        <div class="clearfix"></div>
        <div class="single-pro ">
            @foreach (var item in Model)
            {
                <div class="col-md-3 product-men">
                    <div class="men-pro-item simpleCart_shelfItem">
                        <div class="men-thumb-item">
                            <img src="~/images/product/@item.Image" alt="" class="pro-image-front">
                            <img src="~/images/product/@item.Image" alt="" class="pro-image-back">
                            <div class="men-cart-pro">
                                <div class="inner-men-cart-pro">
                                    <a asp-controller="Home" asp-action="Single" asp-route-id="@item.Id" class="link-product-add-cart">Quick View</a>
                                </div>
                            </div>
                        </div>
                        <div class="item-info-product ">
                            <h4><a asp-controller="Home" asp-action="Single" asp-route-id="@item.Id">@item.Name</a></h4>
                            <div class="info-product-price">
                                <span class="item_price">$ @item.Price</span>
                                
                            </div>
                            <a asp-controller="Home" asp-action="addCart" asp-route-id="@item.Id" class=" addProduct hvr-outline-out btn snipcart-details single-item">Add order</a>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>